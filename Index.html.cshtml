@model Agenda
@{
    ViewData["Title"] = "Cadastro";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="estilo.css"/>

    <title>Dj Vta</title>
</head>
<body>
    <div class="top">
        <ul class="menu">
            <li><a href="#bailes"> Bailes </a> </li>
            <li> <a href="#producoes">Produções </a> </li>
            <li><a href="#agenda"> Contrate </a> </li>
            <li><a href="#sobre"> Sobre </a></li>
            <li><a href="#sobre"> Contato </a></li>
        </ul>
    </div>

    <div class="imagemTopo" id="imgTopo">
        <img src="https://djvta.netlify.app/imagens/capaTopoSite.png" class="imagemTopo">
    </div>
    

    <div class="bailes" id="bailes">
        <h2 class="textoFundoAzul"> Um pouco do baile </h2>
        <video controls class="videoBaile">
            <source src="https://djvta.netlify.app/video/Videobaile.m4v" type="video/mp4" >
          </video>
    
    </div>

    <div class="producoes" id="producoes">
        <div>
            <img src="https://djvta.netlify.app/imagens/foto2.jpg" class="fotinha">
            <img src="https://djvta.netlify.app/imagens/foto3.png" class="fotinha1">
        </div>
        <div class="musicas">
            <h2 class="textoFundoAzul"> Produções </h2>
                <ul>
                    <li class="liMusica"> 
                        <a href="https://www.youtube.com/watch?v=vs0vqTMP9QQ" target="_blank">
                        <img src="https://djvta.netlify.app/imagens/botao-play.png" class="play">
                         <span class="nomeMusica"> Eai, caloteiro </span>
                         <span class="btnAzul">  YOUTUBE  </span> </a>
                    </li> 
                    <li class="liMusica"> 
                        <a href="https://www.youtube.com/watch?v=M9Ely_g-E6k" target="_blank"> 
                        <img src="https://djvta.netlify.app/imagens/botao-play.png" class="play">
                         <span class="nomeMusica"> ACORDA PEDRINHO - (REMIX TRANCE FUNK) </span>
                         <span class="btnAzul">  YOUTUBE  </span> </a>
                    </li>
                    <li class="liMusica">
                        <a href="https://www.youtube.com/watch?v=L20KBD4CLVg" target="_blank">
                         <img src="https://djvta.netlify.app/imagens/botao-play.png" class="play">
                        <span class="nomeMusica"> Beggin' - Måneskin (REMIX FUNK)  </span>
                        <span class="btnAzul">  YOUTUBE  </span> </a>
                    </li>
                </ul>
        
        </div>
    </div>
        <h2 class="textoFundoAzulAgenda"> CONTRATE </h2>  
    <div class="agenda" id="agenda">
        
        <div class="paiContrate">
            <form method="post" asp-action="Cadastro" class="dadosContrate">
                <p><label> Nome: </label>
                <input asp-for="Nome"></p>
                <p><label> Telefone: </label>
                <input asp-for="Telefone"></p>
                <p><label> Data: </label>
                <input asp-for="Dia" type="date"></p>
                <p><label> Local: </label>
                <input asp-for="Lugar"></p>
                <p> <input type="submit" value="ENVIAR"></p>
                <p> <a href="/Home/ListaDatas"> LISTA DE DATAS </a></p>
            </form>
            @if(@ViewData["Erro"] != null){
                 <p class="text-danger">@ViewData["Erro"]</p>
                <script>
                    var anchor = document.getElementById("agenda");
                    anchor.scrollIntoView(true);
                </script>
            }
            @if(@ViewData["Sucesso"] != null){
                 <p>@ViewData["Sucesso"]</p>
                <script>
                    var anchor = document.getElementById("agenda");
                    anchor.scrollIntoView(true);
                </script>
            }
           
           
        </div>
        
    
    </div>

    <div class="sobre" id="sobre">
        <div>
            <img src="https://djvta.netlify.app/imagens/fotoAntipatia.jpeg" class="fotoAntipatia">
        </div>
        <div class="textoSobre">
            <h1 class="tituloSobre"> A vida sem música seria um erro! </h1>
            <p> 
                Victor Augusto mais conhecido como Dj Vta, iniciou a sua carreira a 2 anos, reside na cidade 
                de Suzano-SP, e vem conquistando aos poucos seu espaço no mundo do funk! Produz suas próprias
                musicas a mais de 1 ano trazendo alegria e inovação para seu público! 
            </p>
            <div class="dadosSobre">
                <div class="conteudoContato">
                    <img src="https://djvta.netlify.app/imagens/instagram.png" class="instagramLogo">
                    <h3 class="instaDj"> dj_vta </h3>
                </div>
                <div class="conteudoContato">
                    <img src="https://djvta.netlify.app/imagens/whatsapp.png" class="instagramLogo">
                    <h3 class="instaDj"> (11) 96439-4048 </h3>
                </div>
            </div>
        </div>
    </div>

    <div class="rodape">
        <h5 class="textoRodape"> 2022 - Feito por Victor Augusto </h5>
    </div>

    <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"></script>
    <script type="text/javascript" src="script.js"></script>
</body>
</html>